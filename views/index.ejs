<!DOCTYPE html>
<html lang="pt-BR">
<head>
	<meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no">	
    <title>Admin CÃ¢mara</title>
    <link rel='stylesheet' type='text/css' href='/stylesheets/main.css'>
</head>
<body>

    <% if (error && error.length > 0) {%>
    </div>
      <div class="ui negative message --enter">
        <p class="close icon">X</p>
        <div class="header">
          <%= error %>
        </div>
      </div>        
    <% }%>
    
    <% if (success && success.length > 0) {%>
    </div>
      <div class="ui positive message --enter">
        <p class="close icon">X</p>
        <div class="header">
          <%= success %>
        </div>
      </div>        
    <% }%>


	<main class='login'>		
		<form class="ui form login__form" action='/login' method="POST">
		  <div class="field">
		    <label>Email</label>
		    <input type="text" name="username" placeholder="Email">
		  </div>
		  <div class="field">
		    <label>Senha</label>
		    <input type="password" name="password" placeholder="Senha">
		  </div>
		  <button class="ui button" type="submit">Fazer login</button>
		</form>
	</main>

    <script>
    	if (document.querySelector('.message') != null) {
          document.querySelector('.message .close').addEventListener('click', function(e) {
          	this.parentNode.classList.remove('--enter');
          	this.parentNode.offsetWidth;
          	this.parentNode.classList.add('--exit');
          });
    	}  
    </script>

</body>
</html>